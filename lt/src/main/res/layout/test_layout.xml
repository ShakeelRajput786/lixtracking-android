<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:stretchColumns="3"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView android:text="test 1 1" android:layout_weight="1"></TextView>
            <TextView android:text="test 2 1" android:layout_weight="1"></TextView>
            <TextView android:text="test 3 1" android:layout_weight="1"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView android:text="test 1 2" android:layout_weight="1"></TextView>
            <TextView android:text="test 2 2" android:layout_weight="1"></TextView>
            <TextView android:text="test 3 3" android:layout_weight="1"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView android:text="test 1 3" android:layout_weight="1"></TextView>
            <TextView android:text="test 2 3" android:layout_weight="1"></TextView>
            <TextView android:text="test 3 3" android:layout_weight="1"></TextView>
        </TableRow>

    </TableLayout>

    <!-- ################################################################## -->
    <LinearLayout
        android:layout_below="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">
        <ImageButton
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_action_previous_light"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_action_play_light"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_action_next_light"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</RelativeLayout>