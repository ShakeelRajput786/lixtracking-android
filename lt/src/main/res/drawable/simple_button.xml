<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#961AB7E6"/>
            <stroke
                android:width="1dp"
                android:color="#848484"
                android:alpha="0.5"/>
            
            <padding android:left="20dip" 
                android:right="20dip" 
                android:top="7dip" 
                android:bottom="7dip"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#96FFFFFF"/>
            <padding android:left="20dip" 
                android:right="20dip" 
                android:top="7dip"
                android:bottom="7dip"/>
            <stroke
                android:width="1dp"
                android:color="#848484"
                android:alpha="0.5"/>
        </shape>
    </item>
</selector>